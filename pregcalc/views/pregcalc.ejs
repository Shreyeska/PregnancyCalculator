</body>
<script >
	function showInput() {
            var option = document.getElementById("option").value;
            var lastPeriodInput = document.getElementById("lastPeriodInput");
            var conceptionDateInput = document.getElementById("conceptionDateInput");

            if (option === "lastPeriod") {
                lastPeriodInput.style.display = "block";
                conceptionDateInput.style.display = "none";
            } else if (option === "conceptionDate") {
                lastPeriodInput.style.display = "none";
                conceptionDateInput.style.display = "block";
            }
        }
		function calculateDueDate() {
            var option = document.getElementById("option").value;
            var resultSection = document.getElementById("result");
            var dueDateResult = document.getElementById("dueDateResult");
            var weekResult = document.getElementById("weekResult");

            if (option === "lastPeriod") {
                var firstDay = new Date(document.getElementById("firstDay").value);
                var cycleLength = parseInt(document.getElementById("cycleLength").value);

                var estimatedDueDate = new Date(firstDay.getTime() + (280 + (cycleLength - 28) * 7) * 24 * 60 * 60 * 1000);
            } else if (option === "conceptionDate") {
                var conceptionDate = new Date(document.getElementById("conceptionDate").value);

                var estimatedDueDate = new Date(conceptionDate.getTime() + 280 * 24 * 60 * 60 * 1000);
            }

            dueDateResult.textContent = estimatedDueDate.toDateString();

            var today = new Date();
            var weeksPregnant = Math.floor((today - (option === "lastPeriod" ? firstDay : conceptionDate)) / (7 * 24 * 60 * 60 * 1000));

            weekResult.textContent = weeksPregnant + " weeks";

            resultSection.style.display = "block";
            resultSection.classList.add("active");
        }
</script>
  
